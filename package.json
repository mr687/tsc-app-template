{
  "name": "tsc-app-template",
  "version": "0.0.5",
  "license": "MIT",
  "private": true,
  "main": "bootstrap.ts",
  "scripts": {
    "dev:server": "ts-node-dev --respawn --transpile-only --no-notify -r tsconfig-paths/register src/bootstrap.ts",
    "test": "NODE_ENV=test jest --collect-coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint . --ext .ts",
    "build": "tsc --build --clean",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write"
    ],
    "**/*.ts": [
      "npx tsc --noEmit"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.10.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13"
  }
}
