{
  "compilerOptions": {
    "paths": {
      "@src/*": ["src/*"]
    },
    "target": "es5",
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": ".",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "isolatedModules": true,
    "declaration": false,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": false,
    "noEmitOnError": true
  },
  "exclude": ["node_modules", "build", "**/*.spec.ts"],
  "include": ["**/*.ts"]
}
